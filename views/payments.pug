meta(charset='UTF-8')
meta(name='viewport' content='width=device-width,initial-scale=1')
title Payments Form
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
style.
  
  body {
              background-color: #f8f9fa;
          }
          .payment-form {
              max-width: 400px;
              margin: 100px auto;
              padding: 20px;
              border-radius: 10px;
              box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
              background-color: #f39c12;
          }
          .payment-form input[type="text"],
          .payment-form input[type="number"] {
              margin-bottom: 10px;
              background-color: rgba(255, 255, 255, 0.8);
              border: none;
              border-radius: 5px;
              padding: 10px;
          }
          .payment-form input[type="submit"] {
              background-color: #333;
              border: none;
          }
          .payment-form input[type="submit"]:hover {
              background-color: #555;
          }
  
.container
  .row
    .col-md-6.mx-auto
      .payment-form.p-4
        h2.text-center.mb-4 Make a Payment
        form
          .mb-3
            label.form-label(for='name') Name
            input.form-control#fName(type='text' placeholder='Enter your name')
          .mb-3
            label.form-label(for='amount') Amount
            input.form-control#amount(type='number' placeholder='Enter amount')
          .d-grid.gap-2
            button.btn.btn-primary.btn-block(type='submit') Submit Payment
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')