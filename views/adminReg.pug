meta(charset='UTF-8')
meta(name='viewport' content='width=device-width,initial-scale=1')
title Admin Registration Form
link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet')
link(rel='stylesheet' href='/css/adminReg.css')
.container.mt-5
  h2.mb-4 Admin Registration Form
  form#adminForm(action='/adminReg' method = 'POST')
    .mb-3
      label.form-label(for='username') Username
      input.form-control#username(type='text' name='name' required)
    .mb-3
      label.form-label(for='email') Email address
      input.form-control#email(type='email' name='email' required)
    .mb-3
      label.form-label(for='password') Password
      input.form-control#password(type='password' name='password' required)
    button.btn.btn-primary(type='submit') Register
